<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Smart Task Manager</title>
  <link rel="stylesheet" href="/css/adminDashoboard.css">
  <script defer src="/js/adminScript.js"></script>
</head>

<body>
  <nav class="navbar">
    <div class="nav-brand">User</div>
    <ul class="nav-links">
      <li><a href="/home">View Tasks</a></li>
      <li><a href="/">Logout</a></li>
    </ul>
  </nav>
  <style>
    body {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

main {
  flex: 1;
}

footer {
  margin-top: auto;
}

    
  .task-table {
    width: 100%;
    border-collapse: collapse;
    font-family: Arial, sans-serif;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .task-table thead tr {
    background-color: #007bff;
    color: rgb(22, 2, 2);
    text-align: left;
  }

  .task-table th, 
  .task-table td {
    padding: 12px 15px;
    border-bottom: 1px solid #1b1212;
  }

  .task-table tbody tr:hover {
    background-color: #f1faff;
  }

  /* Button Styles */
  .edit-btn, .delete-btn {
    padding: 6px 12px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 0.9em;
    transition: background-color 0.3s ease;
    color: white;
    margin-right: 5px;
  }

  .edit-btn {
    background-color: #28a745; /* green */
  }

  .edit-btn:hover {
    background-color: #218838;
  }

  .delete-btn {
    background-color: #dc3545; /* red */
  }

  .delete-btn:hover {
    background-color: #c82333;
  }
</style>

<h2>Your Tasks</h2>
<table class="task-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Due Date</th>
    </tr>
  </thead>
  <tbody>
    <% tasks.forEach(task => { %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.due_date.toISOString().split("T")[0] %></td>
      </tr>
    <% }) %>
  </tbody> 


</table>

      </section>


    </main>

    <%- include('partials/footer') %>

</body>

<script>
  async function deleteTask(taskId) {
    if (!confirm('Are you sure you want to delete this task?')) return;

    try {
      const response = await fetch(`/admin/delete-task/${taskId}`, {
        method: 'DELETE',  // Use DELETE HTTP method (adjust server-side accordingly)
        headers: {
          'Content-Type': 'application/json'
        }
      });

      if (response.ok) {
        // Remove the row from the table
        const row = document.getElementById(`task-${taskId}`);
        if (row) {
          row.remove();
        }
      } else {
        const error = await response.text();
        alert('Failed to delete task: ' + error);
      }
    } catch (err) {
      alert('Error deleting task: ' + err.message);
    }
  }
</script>


</html> 

